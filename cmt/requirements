branches src xml output

use commonRootData v*
use digiRootData v*
use reconRootData v*
use xmlBase v*
use facilities v*
use ROOT v3r* IExternal
use GlastPolicy v*
use RootcintPolicy v* GlastPolicy

# See RootPolicy for discussion of this pattern
apply_pattern root_package headers="\
 ../src/AcdCalibBase.h\
 ../src/AcdCalibMap.h\
 ../src/AcdCalibResult.h\
 ../src/AcdCalibVersion.h\
 ../src/AcdCalibUtil.h\
 ../src/AcdGainFit.h\
 ../src/AcdGainFitLibrary.h\
 ../src/AcdHistCalibMap.h\
 ../src/AcdMap.h\
 ../src/AcdPedestalFit.h\
 ../src/AcdPedestalFitLibrary.h\
 ../src/AcdMuonBenchCalib.h\
 ../src/AcdMuonRoiCalib.h\
 ../src/AcdMuonTkrCalib.h\
 ../src/AcdMuonSvacCalib.h\
 ../src/AcdMeritCalib.h\
 ../src/AcdStripChart.h\
 ../src/AcdStripFit.h\
 ../src/AcdVetoFit.h\
 ../src/AcdVetoFitLibrary.h"\
 includes="-I$(COMMONROOTDATAROOT) -I$(DIGIROOTDATAROOT) -I$(RECONROOTDATAROOT)"

#the following prepend makes the includes folder available locally: avoid the package_include
macro_prepend includes "-I $(CALIBGENACDROOT) " WIN32 "/I $(CALIBGENACDROOT) "

macro calibgencal_headers   "" WIN32 

macro source "../src/*.cxx" WIN32 "../src/*.h ../src/*.cxx"

macro_append ROOT_linkopts " -lMinuit -lHist -lGpad -lGraf" \
              WIN32 " ${ROOT_PATH}\lib\libGpad.lib ${ROOT_PATH}\lib\libGraf.lib ${ROOT_PATH}\lib\libHist.lib ${ROOT_PATH}\lib\libMinuit.lib "

macro calibgenacd_linkopts "$(ROOT_linkopts) $(mcRootData_linkopts) $(digiRootData_linkopts) $(reconRootData_linkopts)" 

application runMuonCalib_Roi ../apps/runMuonCalib_Roi.cxx
application runMuonCalib_Tkr ../apps/runMuonCalib_Tkr.cxx
application runMuonCalib_Svac ../apps/runMuonCalib_Svac.cxx
application runPedestal ../apps/runPedestal.cxx
application runVetoCalib ../apps/runVetoCalib.cxx
application runMeritCalib ../apps/runMeritCalib.cxx
application runStripChart ../apps/runStripChart.cxx
